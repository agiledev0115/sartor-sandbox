<section class="sign-in-page">
    <div class="container bg-white mt-5 p-0">
        <div class="row no-gutters">
            <div class="col-sm-3"></div>
            <div class="col-sm-6 align-self-center">
                <div class="sign-in-from">
                    <h1 class="mb-0">Forgot Password</h1>
                    <%- include ('./partials/messages') %>
                        <form action="/app/authenticate" method="post" class="mt-4">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" name="forgot_email" class="form-control mb-0" id="forgot_email"
                                    placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary float-right mb-4">Send</button>
                            </div>
                        </form>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</section>