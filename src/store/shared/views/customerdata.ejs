<!-- Sidebar  -->
<%- include ("./partials/sidebars") %>

<!-- TOP Nav Bar -->
<%- include ("./partials/navbar") %>
<!-- TOP Nav Bar END -->

<!-- Page Content  -->
<div id="content-page" class="content-page">
   <div class="container-fluid">
      <div class="row">
         <div class="col-sm-12">
            <div class="iq-card">
               <div class="iq-card-header d-flex justify-content-between">
                  <div class="iq-header-title">
                     <h4 class="card-title">User List</h4>
                  </div>
               </div>
               <div class="iq-card-body">
                  <% if (cust.length > 0) { %>
                  <div class="table-responsive">
                     <div class="row justify-content-between">
                        <div class="col-sm-12 col-md-6">
                           <div id="user_list_datatable_info" class="dataTables_filter">
                              <form class="mr-3 position-relative">
                                 <div class="form-group mb-0">
                                    <input type="search" class="form-control" id="exampleInputSearch"
                                       placeholder="Search" aria-controls="user-list-table">
                                 </div>
                              </form>
                           </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                           <div class="user-list-files d-flex float-right">
                              <a class="iq-bg-primary" href="javascript:void();">
                                 Print
                              </a>
                              <a class="iq-bg-primary" href="javascript:void();">
                                 Excel
                              </a>
                              <a class="iq-bg-primary" href="javascript:void();">
                                 Pdf
                              </a>
                           </div>
                           <%- include ('./partials/messages') %>
                        </div>
                     </div>
                     <table id="user-list-table" class="table table-striped table-bordered mt-4" role="grid"
                        aria-describedby="user-list-page-info">
                        <span class="table-add float-right mb-3 mr-2">
                           <span class="pl-1"><a class="btn btn-success p-2 m-2" href="/customerdata/add">Add
                                 New</a></span>
                        </span>
                        <thead>
                           <tr>
                              <th>Profile</th>
                              <th>Name</th>
                              <th>Contact</th>
                              <th>Email</th>
                              <th>Country</th>
                              <th>State</th>
                              <th>Address</th>
                              <th>Action</th>
                           </tr>
                        </thead>
                        <tbody>
                           <% for (let customer of cust) { %>
                           <tr>
                              <td class="text-center"><img class="rounded-circle img-fluid avatar-40"
                                    src="/<%= customer.picture %>" alt="profile"></td>
                              <td><%= customer.full_name %></td>
                              <td><%= customer.phone %></td>
                              <td><%= customer.email %></td>
                              <td><%= customer.country %></td>
                              <td><span class="badge iq-bg-primary"><%= user.status %></span></td>
                              <td><%= customer.address %></td>

                              <td>
                                 <div class="flex align-items-center list-user-action">
                                    <form action="/customerdata/delete" method="post"
                                       onSubmit="return confirm('Are you sure you wish to delete?');">
                                       <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title=""
                                          data-original-title="Info" href="/customerdatainfo/<%= customer._id %>"><i
                                             class="ri-user-add-line"></i></a>
                                       <a class="iq-bg-primary" data-toggle="tooltip" data-placement="top" title=""
                                          data-original-title="Edit" href="/customerdata/edit/<%= customer._id %>"><i
                                             class="ri-pencil-line"></i></a>
                                       <input type="hidden" name="customer_id" value="<%= customer._id %>">
                                       <button class="iq-bg-primary" style="border: 0px;" data-toggle="tooltip"
                                          data-placement="top" title="" data-original-title="Delete"><i
                                             class="ri-delete-bin-line"></i></button>
                                    </form>

                                 </div>
                              </td>
                           </tr>
                           <% } %>
                        </tbody>
                     </table>
                  </div>
               </div>
               <% } else { %>
               <span class="table-add mb-5 mr-2">
                  <span class="pl-1">
                     <a class="btn btn-sm iq-bg-success" href="/customerdata/add">Add New</a>
                  </span>
               </span>
               <h4 class="mt-5">No customers so far.</h4>
               <% } %>
            </div>
         </div>
      </div>
   </div>
</div>